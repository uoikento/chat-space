.chat 
   .header
      .left-header
         .left-header__title
            = @group.name
         %ul.left-header__members
            Member:
            %li.member
               - @group.users.each do |user|
                  = user.name
      .right-header
         .right-header__button
            = link_to "Edit", edit_group_path(current_user)
   .messages
      = render @messages
   .form
      = form_for [@group, @message] do |f|
         .new-text
            .input-box
               = f.text_field :content, class: 'content', placeholder: "type a message"
               = f.label :image, class: 'image' do
                  = fa_icon 'image', class: 'icon'
                  = f.file_field :image, class: 'hidden'
            = f.submit 'Send', class: "send"
